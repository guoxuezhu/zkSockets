<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/layout_stroke_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_command_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_solid_bg"
            android:gravity="center"
            android:text="1-1-1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/et_command_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入命令名称"
            android:paddingLeft="@dimen/dp_10"
            android:text="" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#878C91" />

        <EditText
            android:id="@+id/et_command_str"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入命令"
            android:paddingLeft="@dimen/dp_10"
            android:text="" />


    </LinearLayout>


</LinearLayout>