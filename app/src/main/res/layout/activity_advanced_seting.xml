<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/myBgLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/set_bg"
    android:orientation="vertical"
    tools:context=".ui.AdvancedSetingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <Button
                    android:id="@+id/serial_port_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="串口设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <Button
                    android:id="@+id/event_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="事件设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />


                <Button
                    android:id="@+id/zk_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="网关控制器设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/environmental_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="继电器设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <Button
                    android:id="@+id/io_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="报警输入设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/lamp_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="录播设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/vidStatus_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="互动状态监听"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/volume_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="报警输出设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/io_port_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="IO输出设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/door_seting"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="门禁设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <Button
                    android:id="@+id/power_box"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_img_1"
                    android:text="系统重启设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">


    </LinearLayout>


