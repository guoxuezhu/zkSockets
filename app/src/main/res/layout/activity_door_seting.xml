<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DoorSetingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/door_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="门禁设置"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="门禁名称:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/et_door_name"
            android:layout_width="@dimen/dp_400"
            android:layout_height="match_parent"
            android:background="@drawable/layout_table_bg"
            android:gravity="center_vertical"
            android:inputType="text"
            android:paddingLeft="@dimen/dp_10"
            android:text="前门"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="门禁  IP:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/et_door_ip"
            android:layout_width="@dimen/dp_400"
            android:layout_height="match_parent"
            android:background="@drawable/layout_table_bg"
            android:digits="0123456789."
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_10"
            android:text="192.168.1.9"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_door_ok"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/btn_bg"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20" />


</LinearLayout>