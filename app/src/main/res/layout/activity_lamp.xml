<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LampActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/lamp_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="录播设置"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="录播IP:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/et_lb_ip"
            android:layout_width="@dimen/dp_400"
            android:layout_height="match_parent"
            android:background="@drawable/layout_table_bg"
            android:digits="0123456789."
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_10"
            android:text="192.168.1.9"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户名:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/et_lb_user"
            android:layout_width="@dimen/dp_400"
            android:layout_height="match_parent"
            android:background="@drawable/layout_table_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="admin"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="密码:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/et_lb_mima"
            android:layout_width="@dimen/dp_400"
            android:layout_height="match_parent"
            android:background="@drawable/layout_table_bg"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:text="admin"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="是否启用:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />


        <RadioGroup
            android:layout_width="@dimen/dp_400"
            android:layout_height="match_parent"
            android:background="@drawable/layout_table_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_lb_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启用"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20" />

            <RadioButton
                android:id="@+id/rbtn_lb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:text="禁用"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_lubo_ok"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />

        <Button
            android:id="@+id/btn_lubo_huifu"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/btn_bg"
            android:text="云恢复"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />

        <Button
            android:id="@+id/btn_lubo_beifen"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/btn_bg"
            android:text="云备份"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />

    </LinearLayout>

</LinearLayout>