<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/dp_900"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/layout_stroke_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_io_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_solid_bg"
            android:gravity="center"
            android:text="1路输入"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <CheckBox
            android:id="@+id/check_box_io"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_solid_bg"
            android:gravity="center"
            android:text="输出"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <Spinner
            android:id="@+id/spinner_out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dropDownVerticalOffset="40dp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_solid_bg"
            android:gravity="center"
            android:text="触发时间(s)"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/et_io_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />


    </LinearLayout>


</LinearLayout>