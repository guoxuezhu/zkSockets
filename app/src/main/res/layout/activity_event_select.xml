<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.EventSelectActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/event_select_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="互动状态监听"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30" />


        <Switch
            android:id="@+id/vid_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:showText="true"
            android:switchMinWidth="@dimen/dp_60"
            android:textOff="关"
            android:textOn="开" />


    </RelativeLayout>


    <GridView
        android:id="@+id/vid_status_gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_weight="1"
        android:horizontalSpacing="@dimen/dp_40"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp_40" />


</LinearLayout>