<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wang_guan_id"
            style="@style/textView_2"
            android:text="ID" />

        <TextView
            android:id="@+id/wang_guan_ip"
            style="@style/textView_2"
            android:text="网关IP" />

        <TextView
            android:id="@+id/wang_guan_port"
            style="@style/textView_2"
            android:text="网关端口" />

        <TextView
            android:id="@+id/wang_guan_status"
            style="@style/textView_2"
            android:text="是否启用" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_wangguan_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改" />

            <Button
                android:id="@+id/btn_wangguan_delect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除" />
        </LinearLayout>


    </LinearLayout>

    <View style="@style/xian_1" />
</LinearLayout>